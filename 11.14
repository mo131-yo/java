// 1. Доторх үгсийг урвуу болгох
// Эхний болон сүүлийн үгийг өөрчлөхгүй.
// Жишээ:
// Оролт: "JavaScript бол үнэхээр сонирхолтой хэл"
// Гаралт: "JavaScript лоб рээхнеүн йотлохронис хэл"
// 


const uguulberUrvuulah = (text) => {
    const words = text.split(" ");
    let result = [];

    for (let i = 0; i < words.length; i++) {

        if (i === 0 || i === words.length - 1) {
            result.push(words[i]);
        } else {
            const reversed = words[i].split("").reverse().join("");
            result.push(reversed);
        }
    }

    return result.join(" ");
};

const text = "JavaScript бол үнэхээр сонирхолтой хэл";
console.log(uguulberUrvuulah(text));



const uguulberUrvuulan = (text) => {
    const ugnuud = text.split(" ");
    const ehnii = ugnuud.shift();    
    const suuliin = ugnuud.pop();  

    for (let i = 0; i < ugnuud.length; i++) {
        ugnuud[i] = ugnuud[i].split("").reverse().join("");
    }
    return `${ehnii} ${ugnuud.join(" ")} ${suuliin}`;
};

const urDun = uguulberUrvuulan("JavaScript бол үнэхээр сонирхолтой хэл");
console.log(urDun);


// 2. Өгүүлбэр дэх давтагдахгүй үсгүүдийг тоолох (том жижиг ялгахгүй)
// Зөвхөн a–z үсгийг тоолно.
// Оролт: "Сайн уу?"
// Гаралт: 4


const dagdahUgnuuShalgah=(text)=>{
let counter =0;
const davtagdsan={};
for ( let char of text ){
    const haragdahUseg= davtagdsan[char];
    if (char>= "a" && char <= "z"){
        if (!haragdahUseg){
            davtagdsan[char] =1;
counter++ ;
    }else{
        delete davtagdsan[char]
        counter--
    }
    }
    }
    return counter
}
const wor= dagdahUgnuuShalgah("sain uu")
console.log(wor);

// 3. Давхардсан үсгүүдийг арилгаж дарааллыг хадгалах
// Оролт: "aabbccddeeff"
// Гаралт: "abcdef"


const davhardsaniigHasah=(text)=>{
const haragdsan= {}
 let result = "";  

    for (let chat of text) {
        if (!haragdsan[chat]) { 
            result+= chat
            haragdsan[chat] = true
        }
    }
    return result
}
const hhoh= davhardsaniigHasah("aabbccddeeff")
console.log(hhoh);


// 4. kebab-case → camelCase болгох
// Оролт: "hello-world-example"
// Гаралт: "helloWorldExample"

const kababToCamel =(text)=>{
 const usegnuuds= text.split("-")
 let egg= usegnuuds[0]
for (let i=1;i<usegnuuds.length;i++){
    const world=usegnuuds[i]
    const ehniiUsegTomruulah = world[0].toUpperCase()+world.slice(1)
    egg+=ehniiUsegTomruulah
}
return egg
}
const akc= kababToCamel("hello-world-example")
console.log(akc);


