// 5. Урт нь 4-өөс их бол дундах үсгүүдийг “*” болгох
// Эхний 2 ба сүүлийн 2 үлдэнэ.
// Оролт: "mongolia"
// Гаралт: "mo****ia"

const dundahUsegnuudiigUrchluh=(text)=>{
    if( text.length<4){
        return text
    }
    let result =""
    for(i=0;i<text.length;i++){
        if(i<2 || i>= text.length-2){
            result+=text[i]
        }else{
            result += "*"
        }
    }
return result
}
const ugs= dundahUsegnuudiigUrchluh("mongolia")
console.log(ugs);



